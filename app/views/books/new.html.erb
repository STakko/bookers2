        <th>ログインユーザーの名前</th>
      </tr>
      <tr>
        <th>introduction</th>
        <th></th>
      </tr>
    </tbody>
  </table>
    <a class="btn btn-outline-secondary btn-block fas fa-user-cog Url" href="URL"></a>

    <h2 class="mt-3">New book</h2>
    <%= form_with model:@book, local:true do |f| %>
      <div class="field">
        <label for="title">Title</label><br>
        <%= f.text_field :title %>
      </div>
      <br>
      <div class="field">
        <label for="body">Opinion</label><br>
        <%= f.text_area :body %>
      </div>
      <br>
      <%= f.submit ' Create Book ' %>
  <% end %>